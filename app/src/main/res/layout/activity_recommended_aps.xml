<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.butt.bloodpreasureprank.RecommendedAps">


    <LinearLayout
        android:id="@+id/top1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp">
        
        <ImageView
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/dev"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:layout_below="@+id/top1"
        android:id="@+id/top2"
        android:layout_marginTop="@dimen/_20sdp">

        <LinearLayout
            android:id="@+id/apps1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:gravity="center"
            android:weightSum="10">


            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/app1" />

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_40sdp"
                android:background="@drawable/app2" />

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/app3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_below="@+id/apps1"
            android:gravity="center"
            android:weightSum="10">


            <ImageView
                android:id="@+id/app1"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:background="@drawable/install" />

            <ImageView
                android:id="@+id/app2"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_40sdp"
                android:background="@drawable/install" />

            <ImageView
                android:id="@+id/app3"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:background="@drawable/install" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/top3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:layout_below="@+id/top2"
        android:layout_marginTop="@dimen/_20sdp">

        <LinearLayout
            android:id="@+id/apps2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:gravity="center"
            android:weightSum="10">


            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/app4" />

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_40sdp"
                android:background="@drawable/app5" />

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/app6" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_below="@+id/apps2"
            android:gravity="center"
            android:weightSum="10">


            <ImageView
                android:id="@+id/app4"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:background="@drawable/install" />

            <ImageView
                android:id="@+id/app5"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_40sdp"
                android:background="@drawable/install" />

            <ImageView
                android:id="@+id/app6"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:background="@drawable/install" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:layout_below="@+id/top3"
        android:id="@+id/top4"
        android:layout_marginTop="@dimen/_20sdp">

        <LinearLayout
            android:id="@+id/apps3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:gravity="center"
            android:weightSum="10">


            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/app7" />

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_40sdp"
                android:background="@drawable/app8" />

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/app9"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_below="@+id/apps3"
            android:gravity="center"
            android:weightSum="10">


            <ImageView
                android:id="@+id/app7"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:background="@drawable/install" />

            <ImageView
                android:id="@+id/app8"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_40sdp"
                android:background="@drawable/install" />

            <ImageView
                android:id="@+id/app9"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:background="@drawable/install" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top4"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="top">

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-3444255945927869/7948272512" />
    </LinearLayout>
</RelativeLayout>
